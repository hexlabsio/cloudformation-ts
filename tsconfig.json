{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "src",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": false,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "allowJs": true,
    "moduleResolution": "node",
    "target": "ESNext",
    "pretty": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}
